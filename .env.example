# Java desktop app (required)
JAVA_DB_URL=jdbc:mysql://localhost:3306/garage
JAVA_DB_USER=root
JAVA_DB_PASSWORD=

# Desktop email toggle
JAVA_EMAIL_ENABLED=true

# Desktop SMTP (required only if JAVA_EMAIL_ENABLED=true)
# - For Gmail: JAVA_SMTP_USER is full Gmail address and JAVA_SMTP_PASS is a 16-char App Password.
# - For Brevo: JAVA_SMTP_USER is your Brevo SMTP login and JAVA_SMTP_PASS is a Brevo SMTP key.
JAVA_SMTP_HOST=smtp-relay.brevo.com
JAVA_SMTP_PORT=587
JAVA_SMTP_SECURE=false
JAVA_SMTP_USER=your_smtp_user
JAVA_SMTP_PASS=your_smtp_password
JAVA_SMTP_FROM=your_email@example.com

# Node backend (optional; only needed for server.js mode)
# Java desktop app can also reuse these SMTP_* values if JAVA_SMTP_* is not set.
HOST=localhost
CORS_ORIGIN=*
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=your_email@example.com
