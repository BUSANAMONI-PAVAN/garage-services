# Node API (fixed local port)
HOST=localhost
CORS_ORIGIN=*

# Node API email (Brevo SMTP via services/emailService.js)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-brevo-smtp-login
SMTP_PASS=your-brevo-smtp-key
SMTP_FROM=verified-sender@yourdomain.com

# Java desktop app database
JAVA_DB_URL=jdbc:mysql://localhost:3306/garage?allowPublicKeyRetrieval=true&useSSL=false
JAVA_DB_USER=root
JAVA_DB_PASSWORD=your-mysql-password

# Java desktop app email (Brevo SMTP)
JAVA_SMTP_HOST=smtp-relay.brevo.com
JAVA_SMTP_PORT=587
JAVA_SMTP_USER=your-brevo-smtp-login
JAVA_SMTP_PASS=your-brevo-smtp-key
JAVA_SMTP_FROM=verified-sender@yourdomain.com
